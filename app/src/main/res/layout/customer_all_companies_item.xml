<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/company_card_background"
    android:elevation="2dp"
    android:layout_marginBottom="12dp">

    <!-- Company Image -->
    <ImageView
        android:id="@+id/company_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_launcher_background"
        />

    <!-- Company Name -->
    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apple"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintStart_toEndOf="@id/company_image"
        app:layout_constraintTop_toTopOf="@id/company_image"
        app:layout_constraintBottom_toTopOf="@+id/company_category"
        android:layout_marginStart="16dp" />

    <!-- Company Category -->
    <TextView
        android:id="@+id/company_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tech"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toEndOf="@id/company_image"
        app:layout_constraintTop_toBottomOf="@id/company_name"
        android:layout_marginStart="16dp" />

    <!-- Company Description -->
    <TextView
        android:id="@+id/company_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet consectetur. Molestie elit sit a tempor suscipit pretium."
        android:textSize="10sp"
        android:maxLines="3"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toEndOf="@id/company_image"
        app:layout_constraintTop_toBottomOf="@id/company_category"
        app:layout_constraintEnd_toStartOf="@+id/rate_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <!-- Rate Button -->
    <Button
        android:id="@+id/rate_button"
        android:layout_width="78dp"
        android:layout_height="34dp"
        android:backgroundTint="#776B5D"
        android:fontFamily="@font/poppins_regular"
        android:text="Rate"
        android:textColor="#F3EEEA"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/company_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />

</androidx.constraintlayout.widget.ConstraintLayout>
