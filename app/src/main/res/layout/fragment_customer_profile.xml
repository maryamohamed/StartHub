<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primarywhite"
    tools:context=".ui.customerprofile.CustomerProfileFragment">

    <!-- Back button -->

    <!-- Profile image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/user"
    android:scaleType="centerCrop"
    android:background="@drawable/circle_background"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/profileOptionsContainer" />

    <!-- Options List -->
    <LinearLayout
        android:id="@+id/profileOptionsContainer"
        android:layout_width="327dp"
        android:layout_height="530dp"
        android:background="@color/secondarywhite"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileImage">

        <!-- Personal Information -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- replace with personal info icon -->
            <ImageView
                android:id="@+id/edit"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:src="@drawable/edit" />

            <TextView
                android:id="@+id/nameAppeared"
                android:layout_width="181dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/text24"
                android:gravity="center"
                android:paddingStart="16dp"
                android:text="Name"
                android:textColor="@color/secondaryDark"
                android:textSize="@dimen/text24"
                android:textStyle="bold"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/text24"
                android:gravity="center"
                android:paddingStart="16dp"
                android:visibility="invisible"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="@dimen/text12"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/save"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="240dp"
                android:src="@drawable/save" />


        </RelativeLayout>
        <!-- My Reviews -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- replace with personal info icon -->

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="Personal Information"
                android:textColor="@color/secondaryDark"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/reviews" /> <!-- replace with review icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="My Reviews"
                android:textColor="@color/secondaryDark"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- History -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/history" /> <!-- replace with history icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="History"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/settings" /> <!-- replace with settings icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="Settings"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Logout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/logout_19" /> <!-- replace with logout icon -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:text="Logout"
                android:textColor="#FF0000"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondarywhite"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- BottomNavigationView -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primarywhite">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primarywhite"
                app:itemIconTint="@drawable/nav_items"
                app:itemRippleColor="@color/secondaryDark"
                app:itemTextColor="@drawable/nav_items"
                app:labelVisibilityMode="selected"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:menu="@menu/buttom_navigation_menu" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

