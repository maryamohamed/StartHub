<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.training.starthub.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">


        <action
            android:id="@+id/action_navigation_home_to_productDetailsFragment"
            app:destination="@id/productDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_favorites"
        android:name="com.training.starthub.ui.FavoritesFragment"
        android:label="@string/favorites"
        tools:layout="@layout/fragment_favorites">

    </fragment>

    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.training.starthub.ui.CartFragment"
        tools:layout="@layout/fragment_cart">

    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.training.starthub.ui.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/nav_Companies"
        android:name="com.training.starthub.ui.AllCompaniesFragment"
        android:label="fragment_all_companies"
        tools:layout="@layout/fragment_all_companies" />
    <fragment
        android:id="@+id/nav_products"
        android:name="com.training.starthub.ui.AllProductsFragment"
        android:label="fragment_all_products"
        tools:layout="@layout/fragment_all_products" >
        <action
            android:id="@+id/action_nav_products_to_navigation_home"
            app:destination="@id/navigation_home" />
        <action
            android:id="@+id/action_nav_products_to_productDetailsFragment2"
            app:destination="@id/productDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/navigation_search"
        android:name="com.training.starthub.ui.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/productDetailsFragment"
        android:name="com.training.starthub.ui.details.ProductDetailsFragment"
        android:label="fragment_product_details"
        tools:layout="@layout/fragment_product_details" >
        <action
            android:id="@+id/action_productDetailsFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
        <argument
            android:name="position"
            app:argType="integer" />

    </fragment>

</navigation>